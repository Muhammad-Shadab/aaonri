<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registration_steps_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/basicDetailsFragment"
        android:name="com.aaonri.com.ui.authentication.register.fragment.BasicDetailsFragment"
        android:label="fragment_basic_details"
        tools:layout="@layout/fragment_basic_details" >
        <action
            android:id="@+id/action_basicDetailsFragment_to_addressDetailsFragment"
            app:destination="@id/addressDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addressDetailsFragment"
        android:name="com.aaonri.com.ui.authentication.register.fragment.AddressDetailsFragment"
        android:label="fragment_address_details"
        tools:layout="@layout/fragment_address_details" >
        <action
            android:id="@+id/action_addressDetailsFragment_to_locationDetailsFragment"
            app:destination="@id/locationDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationDetailsFragment"
        android:name="com.aaonri.com.ui.authentication.register.fragment.LocationDetailsFragment"
        android:label="fragment_location_details"
        tools:layout="@layout/fragment_location_details" >
        <action
            android:id="@+id/action_locationDetailsFragment_to_servicesCategoryFragment"
            app:destination="@id/servicesCategoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/servicesCategoryFragment"
        android:name="com.aaonri.com.ui.authentication.register.fragment.ServicesCategoryFragment"
        android:label="fragment_services_category"
        tools:layout="@layout/fragment_services_category" />
    <fragment
        android:id="@+id/introFragment"
        android:name="com.aaonri.com.ui.authentication.register.fragment.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" >
        <action
            android:id="@+id/action_introFragment_to_basicDetailsFragment"
            app:destination="@id/basicDetailsFragment" />
    </fragment>
</navigation>