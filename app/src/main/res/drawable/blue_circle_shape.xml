<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#37535353" />

            <corners android:radius="3dp" />
        </shape>
    </item>


    <!-- Background Color (white) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/blueBtnColor" />

            <corners android:radius="3dp" />
            <size android:height="20dp"
                android:width="20dp"/>
        </shape>
    </item>
</layer-list>