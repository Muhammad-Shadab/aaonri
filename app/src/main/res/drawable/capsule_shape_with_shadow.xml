<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#d8d8d8" />
            <corners android:radius="@dimen/_18sdp" />

        </shape>
    </item>

    <!-- White Top color -->
    <item android:top="4px" android:start="2px" android:end="2px">
        <shape  android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="@dimen/_18sdp" />
            <stroke android:width="1dp" android:color="#EFEFEF"/>
        </shape>

    </item>


</layer-list>