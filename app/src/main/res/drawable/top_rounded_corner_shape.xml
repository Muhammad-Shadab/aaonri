<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape>
            <corners android:topLeftRadius="@dimen/_32sdp" android:topRightRadius="@dimen/_32sdp" />
            <gradient android:angle="90"
                android:startColor="@color/white"
                android:endColor="#efefef"
                android:type="linear"/>
        </shape>
    </item>
    <item android:top="2dp" android:left="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="@dimen/_32sdp" android:topRightRadius="@dimen/_32sdp" />
            <gradient android:angle="90"
                android:endColor="#FDFDFD"
                android:startColor="#EFEFEF"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
