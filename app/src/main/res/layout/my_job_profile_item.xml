<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_11sdp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/namell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/jobSeekerNameTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawablePadding="@dimen/_8sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/sf_pro_semi_bold"
                                android:includeFontPadding="false"
                                android:text="Job Alert: BA/PM"
                                android:textColor="@color/jobtxtcolor"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/updateProfileBtn"
                                android:layout_width="@dimen/_16sdp"
                                android:layout_height="@dimen/_16sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/editicon"
                                android:backgroundTint="@color/blueBtnColor"
                                android:paddingHorizontal="@dimen/_14sdp"
                                app:layout_constraintRight_toLeftOf="@+id/delete"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/jobSeekerGmailTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_light_italic"
                            android:maxLines="1"
                            android:text="jamwaladiti@gamil.com"
                            android:textColor="@color/graytxtcolor"
                            android:textSize="13sp"
                            android:translationY="-4dp"
                            app:layout_constraintTop_toBottomOf="@+id/namell" />

                        <TextView
                            android:id="@+id/jobSeekerMobileTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_medium"
                            android:maxLines="1"
                            android:text="+1 (253)-321-0254"
                            android:textColor="@color/jobtxtcolor"
                            android:textSize="12sp"
                            android:translationY="-4dp"
                            app:layout_constraintTop_toBottomOf="@+id/jobSeekerGmailTv" />

                        <TextView
                            android:id="@+id/jobSeekerAddressTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:drawableLeft="@drawable/holo_location_icon"
                            android:drawablePadding="7dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_text_light"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text="New York"
                            android:textColor="@color/graytxtcolor"
                            android:textSize="12sp"
                            android:translationY="-4dp"
                            app:layout_constraintTop_toBottomOf="@+id/jobSeekerMobileTv" />

                        <TextView
                            android:id="@+id/viewletterTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="@string/view_cover_letter"
                            android:textColor="#154591"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/jobSeekerAddressTv" />

                        <TextView
                            android:id="@+id/viewResumeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="@string/view_resume"
                            android:textColor="#154591"
                            android:textSize="14sp"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/jobSeekerAddressTv" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>