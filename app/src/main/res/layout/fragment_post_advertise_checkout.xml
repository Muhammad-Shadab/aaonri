<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_18sdp"
    tools:context=".ui.dashboard.fragment.advertise.post_advertisement.PostAdvertiseCheckout">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#f2efef"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Add on Page" />

                <TextView
                    android:id="@+id/addPageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="DashBoard" />
            </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/view_bg_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView

                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Add Page Location" />

                <TextView
                    android:id="@+id/addPageLocationTv"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="DashBoard Below Interest Area" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Start Date" />

                <TextView
                    android:id="@+id/startdDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="Mar 15,2022" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="End Date" />

                <TextView
                    android:id="@+id/endDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="Mar 21,2022" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Cost of Primary Advertisement" />

                <TextView
                    android:id="@+id/costOfPrimaryTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="$0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Cost of Value Added Services" />

                <TextView
                    android:id="@+id/costOfvalueTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="$0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d9d9d9"
                android:padding="@dimen/_12sdp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_display_light"
                    android:text="Total Amount Payable" />

                <TextView
                    android:id="@+id/toatalPayableTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_gravity="right"
                    android:textColor="@color/light_black_color"
                    android:fontFamily="@font/sf_pro_medium"
                    android:text="$0" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_bg_color"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/ourAdTv"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        android:textColor="@color/light_black_color"
        android:fontFamily="@font/sf_pro_display_light"
        android:text="@string/our_ad_approval_process_text" />

    <TextView
        android:id="@+id/postingofAdTv"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingVertical="7dp"
        android:textDirection="anyRtl"
        android:background="@drawable/blue_radius_shape"
        app:layout_constraintTop_toBottomOf="@+id/ourAdTv"
        android:textColor="@color/white"
        android:gravity="center"
        android:includeFontPadding="false"
        android:fontFamily="@font/sf_pro_semi_bold"
        android:text="Posting of Advt is free till March 2022" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_28sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/green_btn_shape"
        android:fontFamily="@font/sf_pro_semi_bold"
        android:minHeight="0dp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_4sdp"
        android:text="CHECKOUT"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/postingofAdTv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>