<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.fragment.event.post_event.EventDetailsScreenFragment">
    <ImageView
        android:id="@+id/addImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_500sdp"
        android:layout_gravity="top|center"
        android:layout_marginBottom="@dimen/_102sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:translationY="-36dp"
        android:orientation="horizontal"
        app:layout_anchor="@id/classifiedDetailsBottom">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image1CardView"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image2CardView"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image3CardView"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:strokeWidth="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_60sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image_placeholder" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image4CardView"
            android:layout_width="@dimen/_44sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:strokeWidth="@dimen/_1sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/_1sdp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_image_placeholder" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/classifiedDetailsBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bottom_sheet_shape"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/arrowBottomSheet"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:src="@drawable/up_arrow_bottomshet"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/eventPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_28sdp"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:text="$29.99"
                        android:textColor="#114591"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/classifiedNameLinear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/eventPriceTv">

                        <TextView
                            android:id="@+id/EventTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:text="Bay Area Craft Beer Festival 2022"
                            android:textColor="#333333"
                            android:textSize="18sp" />



                    </LinearLayout>

                    <TextView
                        android:id="@+id/classifiedCategoryTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:maxLines="1"
                        android:text="@string/category_food_amp_drink"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/classifiedNameLinear" />
                    <LinearLayout
                        android:id="@+id/classifiedLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/classifiedCategoryTv">

                        <ImageView
                            android:id="@+id/locationIconEvent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/ic_location"
                            app:layout_constraintBottom_toBottomOf="@+id/locationClassifiedTv"
                            app:layout_constraintEnd_toStartOf="@+id/locationClassifiedTv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/locationClassifiedTv" />

                        <TextView
                            android:id="@+id/locationEventTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="New York"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_regular"
                            android:maxLines="1"
                            android:text="08512"
                            android:textColor="#8d959f"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/eventPostDateLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/classifiedLocation">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/ic_time_watch"
                            app:layout_constraintBottom_toBottomOf="@+id/locationClassifiedTv"
                            app:layout_constraintEnd_toStartOf="@+id/locationClassifiedTv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/locationClassifiedTv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_regular"
                            android:maxLines="1"
                            android:text="From"
                            android:textColor="#8d959f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/Startdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="05 FEB 2022"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_regular"
                            android:maxLines="1"
                            android:text="To"
                            android:textColor="#8d959f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/endDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="05 FEB 2022"
                            android:textColor="#333333"
                            android:textSize="12sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/buyTicket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/eventPostDateLinearLayout">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/buyticketicon"
                            app:layout_constraintBottom_toBottomOf="@+id/locationClassifiedTv"
                            app:layout_constraintEnd_toStartOf="@+id/locationClassifiedTv"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/locationClassifiedTv" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_regular"
                            android:maxLines="1"
                            android:text="Buy Tickets Here"
                            android:textColor="#8d959f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/premiumLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/sf_pro_semi_bold"
                            android:maxLines="1"
                            android:text="https://bit.ly/36LkcBK"
                            android:textColor="#154591"
                            android:textSize="12sp" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/disableServiceColor"
    android:padding="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_14sdp"
    >
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="@dimen/_6sdp"
        android:gravity="center"
        android:textColor="@color/graytxtcolor"
        android:inputType="number"
        android:text="297 going"
        android:textSize="12sp" /></LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/star_icon"
            android:drawablePadding="@dimen/_6sdp"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/graytxtcolor"
            android:text="297 Interested"
            android:textSize="12sp" /></LinearLayout>
</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/goingBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/green_btn_shape"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:minHeight="0dp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="@string/going"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/interestedBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/green_btn_shape"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:minHeight="0dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:backgroundTint="@color/blue"
                        android:text="@string/interested"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/EventDescTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/sf_pro_semi_bold"
                    android:text="desc"
                    android:textColor="#333333"
                    android:textSize="12sp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/shareBtn"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/share" />
        <ImageView
            android:id="@+id/calendarBtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/bluecalendar"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            />
        <ImageView
            android:id="@+id/moreBtn"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/bluemore" />
    </LinearLayout>
    <ImageView
        android:id="@+id/navigateBack"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_32sdp"
        android:background="@drawable/blue_circle_shape"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/navigate_back" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>