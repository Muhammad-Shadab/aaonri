<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/hot"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:text="Operations Anlyst"
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="20sp"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/jobTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:text="Android Developer"

                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@+id/nameTv" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/locationTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/job_location_icon"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:includeFontPadding="false"

                        android:text="New York, NY, USA"
                        android:textColor="#797979" />

                    <TextView
                        android:id="@+id/experienceTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/experience_icon"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:includeFontPadding="false"
                        android:text="3 to 5 Years"
                        android:textColor="#797979" />

                    <TextView
                        android:id="@+id/jobPriceTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:drawableLeft="@drawable/dollor1"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="255555-Full Time"
                        android:textColor="#797979" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/applyBtn"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/green1_btn_shape"
                    android:backgroundTint="#124c94"
                    android:fontFamily="@font/sf_pro_semi_bold"
                    android:includeFontPadding="false"
                    android:minHeight="0dp"
                    android:text="Apply Now"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="#802f6ca8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:text="Posted: "
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/point_icon"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:text="Mar 12,2022"
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:text="Job Views: "
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobViewTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/point_icon"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:text="25"
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/sf_pro_display_light"
                        android:text="Job Application: "
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/jobApplicationTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sf_pro_semi_bold"
                        android:text="251"
                        android:textColor="@color/jobtxtcolor"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>